{% extends 'BloggerBlogBundle::userlayout.html.twig' %}

{% block title %}
	 All Posts
{% endblock %}

{% block content%}

	<!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Show
                        <small>All Posts</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">Posts</li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE ROW -->
		
		<div>
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Posts</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
				<div class="portlet-body">
                    <div class="table-responsive">
						{%if posts is defined and posts|length > 0 %}
							{% for post in posts %}
								<div class="post_container" style="border: 1px solid silver; padding: 10px; margin-bottom: 20px;">
									<div class="post_title"><h1 style="color: #ee1111; font-size: 28px; border: 1px solid black; font-weight: bold; font-family: serif; padding: 5px;"><center>{{post.getTitle()}}</center></h1></div>
									<div class="post_content" style="border: 1px solid black;"><center><p style="font-size: 20px; padding: 10px; font-family: serif;">{{post.getContent()}}</p></center>
										<div class="post_author"><h5 style="padding: 5px; color: rgb(164, 149, 149);"> author :  {{post.getAuthor()}}</h5></div>
										{%set categories = post.getCategories()%}
										{%if categories is defined and categories|length > 0 %}
											<div class="post_categories"><h5 style="padding: 5px; color: rgb(164, 149, 149);"> Categories :
											{%for category in categories%}
												&nbsp;  {{category.getName()}}     &nbsp; &nbsp; 
											{%endfor%}
											</h5></div>
										{%endif%}
									</div>
									
								</div>
							{% endfor  %}
						{%else%}
							<tr>
								<td colspan="7"><center>No Active Posts</center></td>
							</tr>
						{%endif%}
					   
                    </div>
                </div>
            </div>
            <!-- /.portlet -->
        </div>
{% endblock %}
		